<h2>Listing Projects</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for project <- @projects do %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>

      <td class="text-right">
        <span><%= link "Show", to: image_assets_project_path(@conn, :show, project), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: image_assets_project_path(@conn, :edit, project), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: image_assets_project_path(@conn, :delete, project), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Project", to: image_assets_project_path(@conn, :new) %></span>
