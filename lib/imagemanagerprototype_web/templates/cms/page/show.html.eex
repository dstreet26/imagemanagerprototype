<h2>Show Page</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @page.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @page.body %>
  </li>

  <li>
    <strong>Views:</strong>
    <%= @page.views %>
  </li>

  <li>
    <strong>
      Author:
    </strong>
    <%= author_name(@page) %>
  </li>

</ul>

<span><%= link "Edit", to: cms_page_path(@conn, :edit, @page) %></span>
<span><%= link "Back", to: cms_page_path(@conn, :index) %></span>
